@model SAM.Training.News.Models.Article
@{
    ViewBag.Title = "IndexAdd";
}

<h2>IndexAdd</h2>
 @section Styles{
                    
        @Styles.Render("~/Styles/AddStyleSheet.css")
        @Styles.Render("~/Content/themes/base/jquery-ui.css") 
        @Scripts.Render("~/Scripts/jquery-1.12.4.js")
        @Scripts.Render("~/Scripts/jquery-ui-1.12.0.js")
        @Scripts.Render("~/Scripts/jquery.validate.js")
        @Scripts.Render("~/Scripts/addValidScript.js")
        
                }
@section inter{
    @*<div id="saveDialog" title="Next step." ><p>Do you want add new article or return to Home page?</p></div> *@
    <div class="allContent">
        <div class="centerBox">
        <div class="nameLine"><div class="namePage"><div class="title">@Html.ActionLink("Add article","","")</div><div class="title">@Html.ActionLink("Upload article","","")</div></div></div>
            <div class="interOffer">
            <div id="headF">Offer your article!</div>
                <div class ="allfields">

                    @using(Html.BeginForm("Add", "Add", FormMethod.Post, new{ @id="formSet"}))
                    {                    
                            @Html.HiddenFor(m=>m.id)
                        
                            @Html.LabelFor(m => m.categoryId, "Choose the category", new { @class="categMessage"})
                            <br />
                        <div id="categoryId">
                        <div class="item">
                            World
                            @Html.RadioButtonFor(m=>m.categoryId, 1)
                        </div>  
                        
                        <div class="item">
                            Business
                            @Html.RadioButtonFor(m=>m.categoryId,2)  
                        
                            </div>
                        <div class="item">
                            Tech
                            @Html.RadioButtonFor(m=>m.categoryId, 3) 
                        
                        </div>
                        <div class="item">
                            Science
                            @Html.RadioButtonFor(m=>m.categoryId, 4)  
                        
                        </div>
                        <div class="item">
                            Helth
                            @Html.RadioButtonFor(m=>m.categoryId, 5)    
                        
                        </div>
                        <div class="item">
                            Sport
                            @Html.RadioButtonFor(m=>m.categoryId, 6)
                        
                        </div>
                        <div class="item">
                            Music
                            @Html.RadioButtonFor(m=>m.categoryId, 7)             
                        </div></div>
<br />
                            
                        @Html.LabelFor(m => m.head, "Enter the head of article")
                        <br /><br />
                        @Html.TextBoxFor(m=>m.head, new {@class="head"})
                        <br /><br />
                        @Html.LabelFor(m => m.content, "Enter the content of article")
                        <br /><br />
                        @Html.TextAreaFor(m=>m.content,new {@class="content"})
                        <br /><br />
                        @Html.LabelFor(m => m.hotNews, "Do you want to add article to HOT NEWS?")
                        
                        @Html.CheckBoxFor(m=> m.hotNews,new {@class="hotNews"})
                        <br /><br />
                        @Html.LabelFor(m=> m.isArchive, "Do you want to add article to archive?")
                        
                        @Html.CheckBoxFor(m=> m.isArchive,new {@class="isArchive"})
                        <br /><br />
                        <p><input class="button" type="submit" value="Save" /></p>
                        
                    }
        
                </div>
            
           
        </div>
    </div>
        </div>
    
    }